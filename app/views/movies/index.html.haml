-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag movies_path, :id => 'ratings_form', :method => :get do
  Include: 
  - @rating_names.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]",1, @ratings_filter.include?(rating), :id => "ratings_#{rating}"
  = submit_tag 'Refresh',:id => 'ratings_submit'

%table#movies
  %thead
    %tr
      %th{:class => css_class(params[:sort],'title')}= sortable "Movie Title"
      %th Rating
      %th{:class => css_class(params[:sort],'release_date')}= sortable "Release Date"
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path